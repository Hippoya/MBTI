<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="600dp"
        android:text="클릭한 버튼에 따라서 설명 다르게"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_my_mbti"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="365dp"
        android:layout_marginEnd="235dp"
        android:layout_marginBottom="266dp"
        android:fontFamily="@font/bmjua"
        android:text="내 MBTI\n페이지로"
        app:iconTint="#68CDFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_all_mbti"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="365dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="266dp"
        android:fontFamily="@font/bmjua"
        android:text="모든 MBTI\n페이지로"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_allmap"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="507dp"
        android:layout_marginEnd="233dp"
        android:layout_marginBottom="124dp"
        android:fontFamily="@font/bmjua"
        android:text="모든 여행지 \n지도 보러 가기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_weather"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="507dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="124dp"
        android:fontFamily="@font/bmjua"
        android:text="여행지 날씨\n확인하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="404dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />


</androidx.constraintlayout.widget.ConstraintLayout>